async function getRelatedBooks(bookId) {
    const response = await fetch(`https://www.googleapis.com/books/v1/volumes/${bookId}/associated?key=${API_KEY}`);
    const data = await response.json();

    if (data.items) {
        console.log("–ü–æ—Ö–æ–∂–∏–µ –∫–Ω–∏–≥–∏:");
        data.items.forEach(book => {
            console.log(`üìñ ${book.volumeInfo.title} - ${book.volumeInfo.authors?.join(", ")}`);
        });
    } else {
        console.log("–ù–µ—Ç —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–π.");
    }
}

